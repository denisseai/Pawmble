<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    
    <style name="StandardButton">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/standard_button_text_size</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/standard_button_rounded</item>
    </style>

    <style name="sendButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/standard_button_text_size</item>
        <item name="android:background">@drawable/send_button_rounded</item>
    </style>
    
    <style name="chatBubble">
        <item name="android:textSize">@dimen/chat_text_size</item>
        <item name="android:minHeight">50dp</item>
        <item name="android:maxWidth">300dp</item>
    </style>

</resources>